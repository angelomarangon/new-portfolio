@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Portfolio.Resources.SharedResource> Localizer

<div id="habilidades" class="py-5" style="margin-top: -105px">
    <div class="container">
        <div class="row justify-content-center g-4">

            <!-- Back-end -->
            <div class="col-12 col-md-6 animate-card-left habilidades bg-white p-5" style="border-radius: 15px 0 0 15px; box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08); min-height: 600px;">
                <div class="text-center mb-4">
                    <i class="bi bi-hdd-fill display-4 text-primary mb-2"></i>
                    <h3 class="fw-bold">Back-end</h3>
                    <p class="text-muted">
                        @Localizer["subtituloBack"]
                    </p>
                </div>

                <p class="badge bg-primary-subtle text-primary fs-6 fw-semibold mb-3 px-3 py-2">Stack</p>
                <div class="d-flex flex-wrap gap-2 mb-4">
                    <span class="badge bg-light text-primary-emphasis px-3 py-2">C#</span>
                    <span class="badge bg-light text-primary-emphasis px-3 py-2">.NET</span>
                    <span class="badge bg-light text-primary-emphasis px-3 py-2">Node</span>
                    <span class="badge bg-light text-primary-emphasis px-3 py-2">Express</span>
                    <span class="badge bg-light text-primary-emphasis px-3 py-2">TypeScript</span>
                    <span class="badge bg-light text-primary-emphasis px-3 py-2">SQL Server</span>
                    <span class="badge bg-light text-primary-emphasis px-3 py-2">PostgreSQL</span>
                    <span class="badge bg-light text-primary-emphasis px-3 py-2">MySQL</span>
                    <span class="badge bg-light text-primary-emphasis px-3 py-2">SQLite</span>
                    <span class="badge bg-light text-primary-emphasis px-3 py-2">MongoDB</span>
                    <span class="badge bg-light text-primary-emphasis px-3 py-2">Docker</span>
                </div>

                <p class="badge bg-primary-subtle text-primary fs-6 fw-semibold mb-3 px-3 py-2">@Localizer["experiencia"]</p>
                <div class="d-flex flex-wrap gap-2">
                    <span class="badge bg-secondary-subtle text-dark px-3 py-2">APIs RESTful</span>
                    <span class="badge bg-secondary-subtle text-dark px-3 py-2">WebSockets</span>
                    <span class="badge bg-secondary-subtle text-dark px-3 py-2">WebHooks</span>
                    <span class="badge bg-secondary-subtle text-dark px-3 py-2">Mongoose</span>
                    <span class="badge bg-secondary-subtle text-dark px-3 py-2">Prisma ORM</span>
                    <span class="badge bg-secondary-subtle text-dark px-3 py-2">ASP.NET Core MVC</span>
                    <span class="badge bg-secondary-subtle text-dark px-3 py-2">Entity Framework</span>
                    <span class="badge bg-secondary-subtle text-dark px-3 py-2">Postman / Swagger</span>
                    <span class="badge bg-secondary-subtle text-dark px-3 py-2">SOLID principles</span>
                </div>
            </div>

            <!-- Front-end -->
            <div class="col-12 col-md-6 animate-card-right habilidades bg-white p-5" style="border-radius: 0 15px 15px 0; box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08); min-height: 600px;">
                <div class="text-center mb-4">
                    <i class="bi bi-code-slash display-4 text-primary mb-2"></i>
                    <h3 class="fw-bold">Front-end</h3>
                    <p class="text-muted">
                        @Localizer["subtituloFront"]
                    </p>
                </div>

                <p class="badge bg-primary-subtle text-primary fs-6 fw-semibold mb-3 px-3 py-2">Stack</p>
                <div class="d-flex flex-wrap gap-2 mb-4">
                    <span class="badge bg-light text-primary-emphasis px-3 py-2">HTML</span>
                    <span class="badge bg-light text-primary-emphasis px-3 py-2">CSS</span>
                    <span class="badge bg-light text-primary-emphasis px-3 py-2">JavaScript</span>
                    <span class="badge bg-light text-primary-emphasis px-3 py-2">React</span>
                    <span class="badge bg-light text-primary-emphasis px-3 py-2">Razor</span>
                    <span class="badge bg-light text-primary-emphasis px-3 py-2">Bootstrap</span>
                    <span class="badge bg-light text-primary-emphasis px-3 py-2">Tailwind CSS</span>
                </div>

                <p class="badge bg-primary-subtle text-primary fs-6 fw-semibold mb-3 px-3 py-2">@Localizer["experiencia"]</p>
                <div class="d-flex flex-wrap gap-2">
                    <span class="badge bg-secondary-subtle text-dark px-3 py-2">Markdown</span>
                    <span class="badge bg-secondary-subtle text-dark px-3 py-2">React Hooks</span>
                    <span class="badge bg-secondary-subtle text-dark px-3 py-2">Landing Page</span>
                    <span class="badge bg-secondary-subtle text-dark px-3 py-2">React Router</span>
                    <span class="badge bg-secondary-subtle text-dark px-3 py-2">Testing Library / Jest</span>
                    <span class="badge bg-secondary-subtle text-dark px-3 py-2">Single Page Application (SPA)</span>
                    <span class="badge bg-secondary-subtle text-dark px-3 py-2">Consumption of RESTful APIs</span>
                    <span class="badge bg-secondary-subtle text-dark px-3 py-2">Multilingual Website</span>
                    <span class="badge bg-secondary-subtle text-dark px-3 py-2">State Management</span>
                </div>
            </div>

        </div>
    </div>
</div>



