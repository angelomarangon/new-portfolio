@using Microsoft.Extensions.Localization

@model IEnumerable<Proyecto>
@inject IStringLocalizer<Portfolio.Resources.SharedResource> Localizer

@if (Model is not null)
{
    <div class="text-center" style="padding-top: 6rem; margin-bottom: 2rem;">
        <h1 class="mb-3">@Localizer["trabajoReciente"]</h1>
        <p>@Localizer["algunosTrabajos"]</p>
    </div>
    
    <partial name="_ListadoProyectos" model="Model"/>
}