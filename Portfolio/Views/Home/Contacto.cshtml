@using Microsoft.Extensions.Localization
@model ContactoViewModel

@inject IStringLocalizer<Portfolio.Resources.SharedResource> Localizer
@{
    ViewData["Title"] = "Contacto";
}

<section class="proyectos-section position-relative overflow-hidden">
    <div class="animated-background"></div>
    <div class="animated-balls-container">
        <div class="ball1 ball"></div>
        <div class="ball2 ball"></div>
        <div class="ball3 ball"></div>
        <div class="ball4 ball"></div>
        <div class="ball5 ball"></div>
        <div class="ball6 ball"></div>
        <div class="ball7 ball"></div>
        <div class="ball8 ball"></div>
    </div>
    <section class="contact-section py-5 position-relative" style="z-index: 99;">
        <div class="container">
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold text-primary animate__animated animate__fadeInDown">@Localizer["hablamos?"]</h1>
                <p class="lead text-secondary animate__animated animate__fadeIn">
                    @Localizer["completaElFormulario"]
                </p>
            </div>

            <div class="bg-glass p-4 rounded-4 shadow mx-auto" style="max-width: 700px;">
                <form asp-controller="Home" asp-action="Contacto">
                    <!-- Campo Nombre -->
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label">@Localizer["nombre"]</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-fill text-primary"></i></span>
                            <input type="text" class="form-control" asp-for="Nombre" placeholder="@Localizer["tuNombre"]" />
                        </div>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <!-- Campo Email -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope-fill text-primary"></i></span>
                            <input type="email" class="form-control" asp-for="Email" placeholder="ejemplo@ejemplo.com"/>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                

                    <!-- Campo Mensaje -->
                    <div class="mb-3">
                        <label asp-for="Mensaje" class="form-label">@Localizer["mensaje"]</label>
                        <div class="input-group">
                            <span class="input-group-text align-top"><i class="bi bi-chat-dots-fill text-primary"></i></span>
                            <textarea class="form-control" asp-for="Mensaje" rows="4" placeholder="@Localizer["escribiMensaje"]" ></textarea>
                        </div>
                        <span asp-validation-for="Mensaje" class="text-danger"></span>
                    </div>

                    <!-- BotÃ³n -->
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary px-4 py-2">@Localizer["enviar"]</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</section>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}